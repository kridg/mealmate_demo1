<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="#DBCDCD"
    tools:context=".Add_Ingredient">
    <ImageView
        android:id="@+id/addIngredient_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/ic_launcher_round"
        />
    <EditText
        android:id="@+id/ingredient_name"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:textSize="22sp"
        android:layout_height="wrap_content"
        android:hint="Enter Ingredient Name"/>
    <EditText
        android:id="@+id/ingredient_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:hint="Enter Ingredient Description"/>
    <EditText
        android:id="@+id/ingredient_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:hint="Enter Price"/>

    <Button
        android:id="@+id/addIngredient_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:text="Add Ingredient"/>

</LinearLayout>